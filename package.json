{
  "author": "Julien Andreu <julienandreu@me.com>",
  "ava": {
    "environmentVariables": {
      "OXC_TSCONFIG_PATH": "./__test__/tsconfig.json"
    },
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--import",
      "@oxc-node/core/register"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "browser": "browser.js",
  "bugs": {
    "url": "https://github.com/julienandreu/win-automation/issues"
  },
  "description": "Win Automation",
  "devDependencies": {
    "@emnapi/core": "^1.5.0",
    "@emnapi/runtime": "^1.5.0",
    "@napi-rs/cli": "^3.2.0",
    "@oxc-node/core": "^0.0.34",
    "@taplo/cli": "^0.7.0",
    "@tybys/wasm-util": "^0.10.0",
    "ava": "^6.4.1",
    "chalk": "^5.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "npm-run-all2": "^8.0.4",
    "oxlint": "^1.14.0",
    "prettier": "^3.6.2",
    "tinybench": "^5.0.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">= 6.14.2 < 7 || >= 8.11.2 < 9 || >= 9.11.0 < 10 || >= 10.0.0"
  },
  "files": [
    "index.d.ts",
    "index.js",
    "browser.js"
  ],
  "homepage": "https://github.com/julienandreu/win-automation",
  "keywords": [
    "napi-rs",
    "NAPI",
    "N-API",
    "Rust",
    "node-addon",
    "node-addon-api"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "oxlint --fix"
    ],
    "*.@(js|ts|tsx|yml|yaml|md|json)": [
      "prettier --write"
    ],
    "*.toml": [
      "taplo format"
    ]
  },
  "main": "index.js",
  "name": "win-automation",
  "napi": {
    "binaryName": "win-automation",
    "targets": [
      "x86_64-pc-windows-msvc",
      "x86_64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "aarch64-apple-darwin"
    ]
  },
  "packageManager": "yarn@4.12.0",
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/julienandreu/win-automation.git"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "bench": "node --import @oxc-node/core/register benchmark/bench.ts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "format": "run-p format:prettier format:rs format:toml",
    "format:prettier": "prettier . -w",
    "format:rs": "cargo fmt",
    "format:toml": "taplo format",
    "lint": "oxlint .",
    "prepare": "husky",
    "prepublishOnly": "napi prepublish -t npm",
    "preversion": "napi build --platform && git add .",
    "test": "ava",
    "version": "napi version"
  },
  "version": "0.1.0"
}
